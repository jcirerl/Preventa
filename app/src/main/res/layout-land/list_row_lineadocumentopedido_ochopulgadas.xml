      <TextView
          android:id="@+id/pid"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/individual"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/pid"
          android:layout_toRightOf="@+id/pid"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/swpedido"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/pid"
          android:layout_toRightOf="@+id/pid"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/swfactura"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/pid"
          android:layout_toRightOf="@+id/pid"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />

      <TextView
          android:id="@+id/cant"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/pid"
          android:layout_toRightOf="@+id/pid"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/articulo"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/cant"
          android:layout_toRightOf="@+id/cant"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/nombre"
          style="@style/RowTitle"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/articulo"
          android:layout_toRightOf="@+id/articulo"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/tipoplato"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/nombre"
          android:layout_toRightOf="@+id/nombre"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
      <TextView
          android:id="@+id/nombreplato"
          style="@style/RowTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/nombre"
          android:layout_toRightOf="@+id/nombre"
          android:visibility="gone"
          android:paddingLeft="@dimen/row_padding" />
   <TextView
       android:id="@+id/obs"
       style="@style/RowTitle"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/nombre"
       android:layout_toRightOf="@+id/nombre"
       android:background="?attr/selectableItemBackgroundBorderless"
       android:clickable="true"
       android:layout_marginLeft="8dp" />

   <!--      <TextView
             android:id="@+id/obs"
             style="@style/RowTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_toEndOf="@+id/nombreplato"
             android:layout_toRightOf="@+id/nombreplato"
             android:paddingLeft="@dimen/row_padding" />
         <TextView
             android:id="@+id/obs"
             style="@style/RowSubtitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_toEndOf="@+id/nombreplato"
             android:layout_toRightOf="@+id/nombreplato"
             android:paddingLeft="@dimen/row_padding" />
   -->
    <ImageView
        android:id="@+id/icon"
        style="@style/RowSubtitle"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cant"
        android:layout_alignStart="@+id/cant"
        android:layout_below="@+id/cant"
        />

    <Button
        android:id="@+id/btnAdd"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:gravity="center"
        android:text="@string/sumar"/>
    <Button
        android:id="@+id/btnMinus"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@android:drawable/ic_delete"
        android:gravity="center"
        android:text="@string/restar"/>


   </RelativeLayout>
