<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#ffffff"   android:orientation="vertical" >
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- se colocal el LinearLayout que contendra el formulario -->
        <LinearLayout android:orientation="vertical"
            android:id="@+id/edit_cobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView android:id="@+id/lblFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/factura"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:textSize="24sp"/>


                <TextView android:id="@+id/Lbltft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/lblFactura"
                    android:layout_toRightOf="@+id/lblFactura"
                    android:text="@string/tipocobro"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:textSize="24sp"/>


                 <TextView android:id="@+id/lblTotalFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Lbltft"
                    android:layout_toRightOf="@+id/Lbltft"
                    android:text="@string/totalfactura"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:textSize="24sp"/>



                <TextView android:id="@+id/Factura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lblFactura"
                    android:layout_alignStart="@+id/lblFactura"
                    android:layout_below="@+id/lblFactura"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:textSize="24sp"/>


                <Spinner android:id="@+id/CmbToolbarTft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Factura"
                    android:layout_toRightOf="@+id/Factura"
                    android:layout_alignLeft="@+id/Lbltft"
                    android:layout_alignStart="@+id/Lbltft"
                    android:layout_below="@+id/Lbltft"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:textSize="24sp"/>
                />

                <TextView android:id="@+id/TotalFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/CmbToolbarTft"
                    android:layout_toRightOf="@+id/CmbToolbarTft"
                    android:layout_alignLeft="@+id/lblTotalFactura"
                    android:layout_alignStart="@+id/lblTotalFactura"
                    android:layout_below="@+id/lblTotalFactura"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:layout_alignParentRight="true"
                    android:textSize="24sp"
                    android:textColor="#ffff0000"/>
            </RelativeLayout>
            <TextView android:id="@+id/lblDto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipodescuento"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"/>


            <EditText android:id="@+id/TipoDto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"
                android:textColor="#ffff0000"
                android:maxLength="6"
                android:inputType="numberDecimal"/>

            <TextView android:id="@+id/lblTotalCobro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalcobro"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"/>

            <EditText android:id="@+id/TotalCobro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"
                android:textColor="#ffff0000"
                android:maxLength="10"
                android:inputType="numberDecimal"/>

            <TextView android:id="@+id/lblTotalDiferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totaldiferencia"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"/>

            <TextView android:id="@+id/TotalDiferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"
                android:textColor="#ffff0000"/>

            <TextView android:id="@+id/lblObs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/observacion"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"/>

            <EditText android:id="@+id/Obs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"
                android:textColor="#ffff0000"
                android:maxLength="100"
                android:inputType="text"/>

            <TextView android:id="@+id/lblfirma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firma"
                android:visibility="gone"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:textSize="24sp"
                android:textColor="#ffff0000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagefirma"
                android:visibility="gone"
                />

            <!-- Input Apertura -->
            <CheckBox
                android:id="@+id/chkCobro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ON_cobro"
                android:textSize="24sp"
                android:checked="true" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Button Guardar Cambios -->
                <ToggleButton android:id="@+id/BtnGuardarCobro"
                    android:textOn="@string/on"
                    android:textOff="@string/off"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:background="@drawable/toggle_style" />
                <Button
                    android:id="@+id/BtnSalir"
                    style="@style/ButtonBorder.Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom= "true"
                    android:layout_toRightOf="@id/BtnGuardarCobro"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/salir" />
            </RelativeLayout>
         </LinearLayout>
    </ScrollView>
</LinearLayout>