<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/general_padding"
    android:paddingRight="@dimen/general_padding"
    android:paddingTop="@dimen/row_padding">
    <!--    android:background="?attr/selectableItemBackground"-->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/pid"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:visibility="gone"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/mesa"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:visibility="gone"
        android:paddingLeft="8dp" />
    <TextView
        android:id="@+id/tfra"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:visibility="gone"
        android:paddingLeft="8dp" />
    <TextView
        android:id="@+id/serie"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/factura"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/serie"
        android:layout_toRightOf="@+id/serie"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/fecha"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/factura"
        android:layout_toRightOf="@+id/factura"
        android:paddingLeft="@dimen/row_padding" />

    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/nombremesa"
        style="@style/RowTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/fecha"
        android:layout_toRightOf="@+id/fecha"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:paddingLeft="@dimen/row_padding" />
    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/estado"
        style="@style/RowTitle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nombremesa"
        android:layout_toRightOf="@+id/nombremesa"
        android:paddingLeft="@dimen/row_padding" />
    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/empleado"
        style="@style/RowTitle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/estado"
        android:layout_toRightOf="@+id/estado"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:paddingLeft="@dimen/row_padding" />
    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/caja"
        style="@style/RowTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/empleado"
        android:layout_toRightOf="@+id/empleado"
        android:paddingLeft="@dimen/row_padding" />
    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/turno"
        style="@style/RowTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/caja"
        android:layout_toRightOf="@+id/caja"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/impbase"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/turno"
        android:layout_toRightOf="@+id/turno"
        android:visibility="gone"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/impiva"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/impbase"
        android:layout_toRightOf="@+id/impbase"
        android:visibility="gone"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/impcobro"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/impbase"
        android:layout_toRightOf="@+id/impbase"
        android:visibility="gone"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/imptotal"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/turno"
        android:layout_toRightOf="@+id/turno"
        android:paddingLeft="@dimen/row_padding" />
    <tpv.cirer.com.marivent.herramientas.AutoResizeTextView
        android:id="@+id/nombretft"
        style="@style/RowTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imptotal"
        android:layout_toRightOf="@+id/imptotal"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/lineas"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nombretft"
        android:layout_toRightOf="@+id/nombretft"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/obs"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lineas"
        android:layout_toRightOf="@+id/lineas"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:paddingLeft="@dimen/row_padding" />
    <!--    <Button
            android:id="@+id/BtnSalir"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom= "true"
            android:layout_toRightOf="@id/BtnGuardarCobro"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_bg_transparent"
            android:textColor="#ff0000ff"
            android:text="@string/salir" />
    -->

    <Button
        android:id="@+id/btnUpdate"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/factura"
        android:layout_alignStart="@+id/factura"
        android:layout_below="@+id/factura"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_marginLeft="10dp"
        android:text="@string/modificar"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnDelete"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombremesa"
        android:layout_alignStart="@+id/nombremesa"
        android:layout_below="@+id/mesa"
        android:layout_toEndOf="@+id/btnUpdate"
        android:layout_toRightOf="@+id/btnUpdate"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@android:drawable/ic_delete"
        android:text="@string/anular"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnCobro"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/empleado"
        android:layout_alignStart="@+id/empleado"
        android:layout_below="@+id/empleado"
        android:layout_toEndOf="@+id/btnDelete"
        android:layout_toRightOf="@+id/btnDelete"
        android:drawableLeft="@drawable/visa32"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="@string/cobrar"/>
    <Button
        android:id="@+id/btnDivision"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/caja"
        android:layout_alignStart="@+id/caja"
        android:layout_below="@+id/caja"
        android:layout_toEndOf="@+id/btnCobro"
        android:layout_toRightOf="@+id/btnCobro"
        android:drawableLeft="@drawable/minus32"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="@string/facturar"/>
    <Button
        android:id="@+id/btnFactura"
        style="@style/ButtonBorder.Accent"
        android:layout_gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/turno"
        android:layout_alignStart="@+id/turno"
        android:layout_below="@+id/turno"
        android:layout_toEndOf="@+id/btnDivision"
        android:layout_toRightOf="@+id/btnDivision"
        android:drawableLeft="@drawable/invoice32"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="@string/facturar"/>

</RelativeLayout>

