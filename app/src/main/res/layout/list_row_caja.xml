<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/general_padding"
    android:paddingRight="@dimen/general_padding"
    android:paddingTop="@dimen/row_padding">
    <!--    android:background="?attr/selectableItemBackground"-->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/pid"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:visibility="gone"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/caja"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/nombrecaja"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/caja"
        android:layout_toRightOf="@+id/caja"
        android:paddingLeft="@dimen/row_padding" />
    <TextView
        android:id="@+id/fechaapertura"
        style="@style/RowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nombrecaja"
        android:layout_toRightOf="@+id/nombrecaja"
        android:paddingLeft="@dimen/row_padding" />
     <Button
        android:id="@+id/btnOpen"
        style="@style/RowSubtitle"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/caja"
        android:layout_alignStart="@+id/caja"
        android:layout_below="@+id/caja"
        android:drawableLeft="@drawable/open24"
        android:layout_marginLeft="10dp"
         android:gravity="center"
         android:text="@string/abierto"
         android:background="@drawable/button_bg_transparent"/>
    <Button
        android:id="@+id/btnClose"
        style="@style/RowSubtitle"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/caja"
        android:layout_alignStart="@+id/caja"
        android:layout_below="@+id/caja"
        android:layout_toEndOf="@+id/btnOpen"
        android:layout_toRightOf="@+id/btnOpen"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/close24"
        android:text="@string/cerrado"
        android:gravity="center"
        android:background="@drawable/button_bg_transparent"
        />

</RelativeLayout>
