<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="Theme.RicoPaRico" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
       <!-- <item name="android:actionBarSize">30dp</item> defecto 96 -->

        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.ConNavigationDrawer" parent="Base.AppTheme"/>
    <style name="RowTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
        <item name="android:icon">@drawable/logo_ricoparico</item>

    </style>

    <style name="RowSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    <style name="RowSubtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
